{
  "extends": ["plugin:import/errors", "prettier", "next"],
  "plugins": ["prettier"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "prettier/prettier": ["error"],
    "import/resolver": {
      "alias": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"],
        "map": [
          ["@", "."]
        ]
      }
    }
  }
}
